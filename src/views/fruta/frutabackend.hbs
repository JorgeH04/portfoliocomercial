<body id="page-top">

 <a class="btn btn-danger" href="/">
              Volver al inicio
  </a>

<div class="col-md-4 mx-auto mt-5">
  <div class="card text-center">
    <div class="card-header">
      <h3>Agregue otro sabor</h3>
    </div>
    <div class="card-body">
      <form action="/fruta/new-fruta" method="POST">
        <div class="form-group">
          <input type="text" name="imagePath" class="form-control" placeholder="imagen" autofocus/>
        </div>
       <div class="form-group">
          <input type="text" name="sabor" class="form-control" placeholder="sabor" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="price" class="form-control" placeholder="precio" autofocus/>
        </div>
       
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>





 <div class="row mt-5">
        {{#each fruta}}
      <div class="col-md-3 wow slideInDown">
       <div class="card"> 
            <img class="card-img-top img-fluid" alt="img1" src="{{imagePath}}">
          
          <div class="card-body">
        <div class="card-heading">{{ sabor }}</div>
        <p class="card-text">${{ price }}</p>
        <h4 class="card-title d-flex justify-content-between align-items-center">
           <a class="btn btn-success" href="/fruta/edit/{{_id}}">Actualizar</a>
        </h4>
        <!-- DELETE REQUEST -->
         <a class="btn btn-danger" href="/fruta/delete/{{_id}}">
              Eliminar
          </a>
        <a class="btn btn-pink text-light"><i class="fa f-plus" aria-hidden="true"></i> </a> </div>
        </div>
  </div>
          {{/each}}


</div>
     
</div>
</div>



